<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sky.mapper.CommentsMapper">

    
    <select id="commentsNum" resultType="java.lang.Integer">
        SELECT count(comment_id)
        FROM myDemo.comments
        WHERE moment_id in
        <foreach collection="momentIdList" item="momentId" open="(" separator="," close=")">
            #{momentId}
        </foreach>
    </select>


</mapper>
