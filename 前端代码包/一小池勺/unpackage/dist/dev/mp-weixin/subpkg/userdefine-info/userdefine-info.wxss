.container {
  width: 100vw;
  height: 100vh;
}
.container .icon {
  width: 100%;
  text-align: center;
  color: #460779;
  font-weight: 600;
}
.container .active {
  position: relative;
  z-index: 9999;
  color: #460779;
  font-weight: 800;
}
.container .active::after {
  position: absolute;
  z-index: -9999;
  content: "";
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(70, 7, 121, 0.2);
  left: 50%;
  top: 90%;
  border-radius: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
}
